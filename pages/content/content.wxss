/* pages/content/content.wxss */
.container{
  background-color: #f1f5f7;
  width: 100%;
  height: 100%;
   
}
.intro {
    width: 98%;
    
    background-color: #ffffff;
    display: flex;
    flex-wrap: wrap;
    
    margin: 15rpx 5rpx;
}
.title {
    font-size: 20px;
    margin: 10rpx auto;
    font-weight: bold;
    
}
.intro-text {
    font-size: 12px;
    text-indent: 5%;
    color: #d3d3d3;
    margin: 10rpx ;
}
.foot {
    width: 100%;
    height: 35rpx;
    position: relative;
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    
}
.foot-left {
    font-size: 14px;
    color: #d3d3d3;
    position: absolute;
    left: 10rpx;
}
.foot-right {
    display: flex;
    flex-wrap: nowrap;
     position: absolute;
    right: 10rpx;
    
}
.foot-right image {
    width: 30rpx;
    height:30rpx;
    
}
.foot-right text {
    font-size: 13px;
    color: #d3d3d3; 
    text-indent:5rpx; 
}
.btn {
    background-color: #f1f5f7;
    height: 420rpx;
    margin: 10rpx 5rpx;
    display: flex;
    align-items: center;
}
.btn button {
    width: 600rpx;
    height: 70rpx;
   background: #0088CC;
    margin: 80rpx auto; 
    border: 1px solide blue;
    vertical-align:center;
    position: relative;
}
.img {
    width:60rpx;
    height: 50rpx;
    position: absolute;
    left: 25%;
    top: 10rpx;
    
}
button text{
    font-size: 18px;
    color: #ffffff;
    border: 1px solide rebeccapurple;
    position: absolute;
    bottom: -10rpx;
    left: 40%;
}