<!--pages/content/content.wxml-->
<view class="container">
    <view class="vid">
        <video id="myVideo" style="height:{{videoHeight}}px;width:{{videoWidth}}px" src="http://wxsnsdy.tc.qq.com/105/20210/snsdyvideodownload?filekey=30280201010421301f0201690402534804102ca905ce620b1241b726bc41dcff44e00204012882540400&bizid=1023&hy=SH&fileparam=302c020101042530230204136ffd93020457e3c4ff02024ef202031e8d7f02030f42400204045a320a0201000400"   enable-danmu danmu-btn controls></video>
    </view>
    <view class="intro">
        <text class="title">{{title}}</text>
        <text class="intro-text">{{introtext}}</text>
        <view class="foot">
            <view class="foot-left">浏览量：{{view}}</view>
            <view class="foot-right" bindtap="zan">
                <image src="{{likeIcon}}"></image>
                <text> 赞</text>
            </view>
        </view>
     </view>
     <view class="btn">
        <button bindtap="default" > 
            <image src="{{btnIcon}}" class="img"></image>
            <text>资料下载</text>
         </button>
     </view>
</view>